<!doctype html>
<html lang="en">

<head>
      @html.include('/dashboard/header')
</head>
<body>
    <div class="wrapper">
        <div class="sidebar" data-color="green" data-image="/dash/img/sidebar-1.jpg">
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="active">
                        <a href="#"  role="tab" data-toggle="tab">
                            <i class="material-icons">dashboard</i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/tables">
                            <i class="material-icons">content_paste</i>
                            <p>Modificar dados</p>
                        </a>
                    </li>
                    <li>
                      <a href="/">
                        <i class="material-icons">home</i>
                        <p>Tela de início</p>
                      </a>
                    </li>
                    <li>
                      <a href="users/logout">
                        <i class="material-icons">lock_outline</i>
                        <p>Logout</p>
                      </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-3 col-md-8 col-sm-6">
                            <div class="card card-stats">
                                <div class="card-header" data-background-color="green">
                                    <i class="material-icons">content_copy</i>
                                </div>
                                <div class="card-content">
                                    <p class="category">Produtos Cadastrado</p>
                                    <h3 class="title">@model.contador
                                        <small>Produtos</small>
                                    </h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-8 col-sm-6">
                            <div class="card card-stats">
                                <div class="card-header" data-background-color="blue">
                                    <i class="material-icons">face</i>
                                </div>
                                <div class="card-content">
                                    <p class="category">Usuários Cadastrados</p>
                                    <h3 class="title">@model.count</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-8 col-sm-6">
                            <div class="card card-stats">
                                <div class="card-header" data-background-color="red">
                                    <i class="material-icons">info_outline</i>
                                </div>
                                <div class="card-content">
                                    <p class="category">Reclamações</p>
                                    <h3 class="title">@model.contadorrec</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            <div class="card card-nav-tabs">
                                <div class="card-header" data-background-color="green">
                                    <div class="nav-tabs-navigation">
                                        <div class="nav-tabs-wrapper">
                                            <span class="nav-tabs-title">Feed</span>
                                            <ul class="nav nav-tabs" data-tabs="tabs">
                                                <li class="active">
                                                    <a href="#profile" data-toggle="tab">
                                                        <i class="material-icons">shopping_cart</i> Produtos
                                                        <div class="ripple-container"></div>
                                                    </a>
                                                </li>
                                                <li class="">
                                                    <a href="#bug" data-toggle="tab">
                                                        <i class="material-icons">person</i> Usuários
                                                        <div class="ripple-container"></div>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-content">
                                    <div class="tab-content">
                                        <div class="tab-pane active" id="profile">
                                          <table id="myTable" class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th class="text-center">ID</th>
                                                    <th>Produto</th>
                                                    <th>Data</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                              @model.produto.forEach(function(item){
                                              <tr>
                                                <td>@item.produtoid</td>
                                                <td id="prdnome">@item.produtonome</td>
                                                <td>@item.produtodata</td>
                                              </tr>
                                              })

                                            </tbody>
                                          </table>
                                        </div>
                                        <div class="tab-pane" id="messages">
                                          <table class="table">
                                            <thead>
                                                <tr>
                                                    <th class="text-center">ID</th>
                                                    <th>Nome </th>
                                                    <th>Email</th>
                                                    <th>Data</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                              @model.user.forEach(function(item){
                                              <tr>
                                                <td>@item.id</td>
                                                <td>@item.nome_completo</td>
                                                <td>@item.email</td>
                                                <td>@item.data_cadastro</td>
                                              </tr>
                                              })

                                            </tbody>
                                          </table>
                                        </div>
                                        <div class="tab-pane" id="bug">
                                          <table class="table">
                                            <thead>
                                                <tr>
                                                    <th class="text-center">ID</th>
                                                    <th>Nome </th>
                                                    <th>Email</th>
                                                    <th>Mensagem</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                              @model.user.forEach(function(item){
                                              <tr>
                                                <td>@item.id</td>
                                                <td>@item.nome_completo</td>
                                                <td>@item.email</td>
                                                <td>@item.data_cadastro</td>
                                              </tr>
                                              })

                                            </tbody>
                                          </table>
                                        </div>
                                        <div class="tab-pane" id="messages">
                                          <table class="table">
                                            <thead>
                                                <tr>
                                                    <th class="text-center">ID</th>
                                                    <th>Nome </th>
                                                    <th>Email</th>
                                                    <th>Data</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                              @model.user.forEach(function(item){
                                              <tr>
                                                <td>@item.id</td>
                                                <td>@item.nome_completo</td>
                                                <td>@item.email</td>
                                                <td>@item.data_cadastro</td>
                                              </tr>
                                              })

                                            </tbody>
                                          </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12">
                            <div class="card">
                                <div class="card-header" data-background-color="green">
                                    <h4 class="title">Reclamações e dúvidas</h4>
                                </div>
                                <div class="card-content table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <th>ID</th>
                                            <th>Email</th>
                                            <th>Comentário</th>
                                        </thead>
                                        <tbody>
                                            @model.rec.forEach(function(item){
                                              <tr>
                                              <td>@item.id</td>
                                              <td>@item.email</td>
                                              <td>@item.mensagem</td>
                                              </tr>
                                            })
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<!--   Core JS Files   -->
<script src="/dash/js/jquery-3.2.1.min.js" type="text/javascript"></script>
<script src="/dash/js/bootstrap.min.js" type="text/javascript"></script>
<script src="/dash/js/material.min.js" type="text/javascript"></script>
<!--  Dynamic Elements plugin -->
<script src="/dash/js/arrive.min.js"></script>
<!--  PerfectScrollbar Library -->
<script src="/dash/js/perfect-scrollbar.jquery.min.js"></script>
<!--  Notifications Plugin    -->
<script src="/dash/js/bootstrap-notify.js"></script>
<!-- Material Dashboard javascript methods -->
<script src="/dash/js/material-dashboard.js?v=1.2.0"></script>
</html>
